#include<stdio.h>
int main()
{
    int n,how_much;
    scanf("%d %d",&n,&how_much);
    switch(n){
    case 1:
        printf("Total: R$ %.2f\n",4.00*how_much);
        break;
    case 2:
        printf("Total: R$ %.2f\n",4.50*how_much);
        break;
     case 3:
        printf("Total: R$ %.2f\n",5.00*how_much);
        break;
     case 4:
        printf("Total: R$ %.2f\n",2.00*how_much);
        break;
     case 5:
        printf("Total: R$ %.2f\n",1.50*how_much);
        break;
    return 0;
    }
}
